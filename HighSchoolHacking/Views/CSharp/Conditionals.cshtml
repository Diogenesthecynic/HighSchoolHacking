@using HighSchoolHacking.Models
@model Language

@{
    Html.RenderPartial(Section.ViewFile, new Section
    {
        Color = Section.GetNextColor(Model.Color, 6),
        Title = "Conditionals",
        Extension = Model.NameLower,
        Back = "/" + Model.Name + "/Learn",
        Large = true,
        Paragraphs = new string[]
        {
            "Comments in " + Model.Name + " are pretty much the same as in Java, JavaScript, C++, and most popular languages. There's no lesson here because you should already know <code>if</code>, <code>else</code>, and <code>else if</code> conditionals.",
            "Protip: the " + Model.Name + " lesson on <code>while</code> loops is also a mostly blank page."
        }
    });

    Html.RenderPartial(Section.SwitcherFile, new KeyValuePair<string, string>(Model.Name, "Conditionals"));
}
